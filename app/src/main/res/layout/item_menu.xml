<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:background="#A83131">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvFood"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:background="@drawable/food_card">

        <ImageView
            android:id="@+id/imFood"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/astavka" />

        <TextView
            android:id="@+id/tvNameFood"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/patua_one"
            android:gravity="top"
            android:text="Chicken Teriyaki â€¨Sauce Marinade"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="normal"
            android:typeface="serif"
            app:layout_constraintEnd_toEndOf="@+id/imFood"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imFood" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="165dp"
            android:layout_height="27dp"
            android:layout_marginStart="4dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="@color/black"
            android:progressTint="@color/colorAccent"
            android:rating="4"

            android:requiresFadingEdge="horizontal"
            android:scaleX="0.7"
            android:scaleY="0.4"

            android:stepSize="1"
            android:verticalScrollbarPosition="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/tvNameFood"
            app:layout_constraintTop_toBottomOf="@+id/tvNameFood"
            app:layout_constraintVertical_bias="1.0"
            app:layout_wrapBehaviorInParent="horizontal_only" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>